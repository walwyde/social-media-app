
  <%- include('./partials/nav.ejs') %>
  <div class="container">
    <h3 class="py-1 tc">Share With Us</h3>
    <form action="/posts" method="POST">
      <div class="form-group">
        <label for="image">Provide image link (for now)</label>
        <input type="text" name="post[image]" id="image" required>
      </div>
      <div class="form-group">
        <label for="caption"> Add Caption</label>
        <textarea name="post[caption]" rows="2"></textarea>
      </div>
        <input type="hidden" name="post[time]" value="<% new Date().toDateString() %>">
        <div class="form-group">
          <input type="submit" class="btn btn-secondary" value="Submit"/>
        </div>
    </form>
    </div>
